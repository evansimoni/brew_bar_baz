  <div id="wrapper">
    <div id="headcontainer">
      <header>
        <h1>Brew Bar Baz</h1>
        <h3>Explore breweries by city</h3>
        <div class="introtext">
          <div class="container">
            <form action="/" method="post">
              <input type="text" name="locality" placeholder="City Name">
              <input id="locality-button" type="submit"><br><br>
              <div class="coords">Your coordinates are not available. Please allow this site to view your location and try refreshing the page.</div>
            </form>
          </div>

        </div>
      </header>
    </div>
    <div id="maincontentcontainer">
      <div id="maincontent">
     <!--  <div class="section group">
      <h3>Two Columns</h3>
    </div> -->
    <% if @breweries %>
    <% @breweries.each do |brewery| %>
    <div id="<%= brewery["breweryId"] %>" class="section group" >
      <h4>
        <a href="<%= brewery["website"] %>"><%= brewery["brewery"]["name"] %></a>
      </h4>
      <div class="col span_3_of_6">
        <p>
          <%= brewery["brewery"]["description"] %>
        </p>
        <h5>
          <%= brewery["streetAddress"] %><br>
          <%= brewery["phone"] %>
        </h5>
      </div>
      <div class="col span_2_of_6">
        <% if brewery["brewery"]["images"] %>
        <img src="<%= brewery["brewery"]["images"]["icon"] %>">
        <% end %>
        <h5 style="text-align: center">
          <a href="#" class="beer_menu">See the beer menu</a>
        </h5>
      </div>
    </div>
    <% end %>
    <% end %>

  </div>
</div>
