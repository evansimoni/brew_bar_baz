<div id="skiptomain"><a href="#maincontent">skip to main content</a></div>

<div id="map-canvas"></div>
<button id="find-me">find me</button>
<button id="zoom-in">zoom to me</button>


<div id="wrapper">
  <div id="headcontainer">
    <header>
      <h1>Brew Bar Baz</h1>
      <h3>Search breweries by city</h3>
      <div class="introtext">
        <div class="container">
          <form action="/" method="post">
            <input type="text" name="locality" placeholder="Where do you want to drink?">
            <input id="locality-button" type="submit"><br>
            <p class="coords">Your coordinates are not available. Please allow this site to view your location and try refreshing the page.</p>
          </form>
        </div>

      </div>
    </header>
  </div>
  <div id="maincontentcontainer">
    <div id="maincontent">
     <!--  <div class="section group">
      <h3>Two Columns</h3>
    </div> -->
    <% if @breweries %>
    <% @breweries.each do |brewery| %>
    <div id="<%= brewery["breweryId"] %>" class="section group" >
      <h4>
        <a href="<%= brewery["website"] %>"><%= brewery["brewery"]["name"] %></a>
      </h4>
      <div class="col span_2_of_2">
        <p>
          <%= brewery["brewery"]["description"] %>
        </p>
        <% if brewery["brewery"]["images"] %>
        <img src="<%= brewery["brewery"]["images"]["medium"] %>">
        <% end %>
        <h5>
          <%= brewery["streetAddress"] %><br>
          <%= brewery["phone"] %>
        </h5>
      </div>
    </div>
    <% end %>
    <% end %>

  </div>
</div>
</div>
<div id="footercontainer">
  <footer class="group">
    <div class="col span_1_of_3">
      <h4>About me</h4>
      <p></p>
    </div>
    <div class="col span_1_of_3">
      <h4>Why did I make this?</h4>
      <p></p>
    </div>
    <div class="col span_1_of_3">
      <h4>More about DBC</h4>
      <p></p>
    </div>
    <br class="breaker" />
  </footer>
</div>
</div>
